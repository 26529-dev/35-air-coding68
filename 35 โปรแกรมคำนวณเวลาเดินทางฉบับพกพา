import ipywidgets as widgets
from IPython.display import display, HTML, clear_output

# --- 1. ‡∏ï‡∏Å‡πÅ‡∏ï‡πà‡∏á‡∏™‡πà‡∏ß‡∏ô‡∏´‡∏±‡∏ß‡πÉ‡∏´‡πâ‡∏î‡∏π‡∏ô‡πà‡∏≤‡∏£‡∏±‡∏Å ---
header = widgets.HTML(
    value="""
    <h2 style='color: #FF69B4; font-family: "Kanit", sans-serif;'>
        üå∏ ‡πÇ‡∏õ‡∏£‡πÅ‡∏Å‡∏£‡∏°‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡πÄ‡∏ß‡∏•‡∏≤‡πÄ‡∏î‡∏¥‡∏ô‡∏ó‡∏≤‡∏á‡∏â‡∏ö‡∏±‡∏ö‡∏û‡∏Å‡∏û‡∏≤ üå∏
    </h2>
    <p style='color: #6A5ACD;'>‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏•‡∏î‡πâ‡∏≤‡∏ô‡∏•‡πà‡∏≤‡∏á‡πÉ‡∏´‡πâ‡∏Ñ‡∏£‡∏ö‡∏ñ‡πâ‡∏ß‡∏ô‡∏ô‡∏∞‡∏Ñ‡∏∞ ~</p>
    """
)

# --- 2. ‡∏™‡∏£‡πâ‡∏≤‡∏á‡∏ä‡πà‡∏≠‡∏á‡∏Å‡∏£‡∏≠‡∏Å‡∏Ç‡πâ‡∏≠‡∏°‡∏π‡∏• (UI Elements) ---
style = {'description_width': 'initial'}

name = widgets.Text(description="üéÄ ‡∏ä‡∏∑‡πà‡∏≠‡∏Ç‡∏≠‡∏á‡∏Ñ‡∏∏‡∏ì:", placeholder='‡∏û‡∏¥‡∏°‡∏û‡πå‡∏ä‡∏∑‡πà‡∏≠‡∏ï‡∏£‡∏á‡∏ô‡∏µ‡πâ‡∏à‡πâ‡∏≤', style=style)
start_time = widgets.Text(description="‚è∞ ‡πÄ‡∏ß‡∏•‡∏≤‡∏ó‡∏µ‡πà‡πÄ‡∏£‡∏¥‡πà‡∏° (‡πÄ‡∏ä‡πà‡∏ô 10:30):", placeholder='10:30', style=style)
dist_s = widgets.FloatText(description="üìè ‡∏£‡∏∞‡∏¢‡∏∞‡∏ó‡∏≤‡∏á (‡∏Å‡∏°.):", value=0, style=style)
speed_v = widgets.FloatText(description="üöÄ ‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß (‡∏Å‡∏°./‡∏ä‡∏°.):", value=0, style=style)

# ‡∏õ‡∏∏‡πà‡∏°‡∏Å‡∏î‡πÅ‡∏ö‡∏ö‡∏ô‡πà‡∏≤‡∏£‡∏±‡∏Å
calc_button = widgets.Button(
    description='‚ú® ‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡πÄ‡∏•‡∏¢ ‚ú®',
    button_style='info', # ‡∏™‡∏µ‡∏ü‡πâ‡∏≤‡∏û‡∏≤‡∏™‡πÄ‡∏ó‡∏•
    tooltip='‡∏Å‡∏î‡πÄ‡∏û‡∏∑‡πà‡∏≠‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì‡πÄ‡∏ß‡∏•‡∏≤‡πÄ‡∏î‡∏¥‡∏ô‡∏ó‡∏≤‡∏á',
    icon='check'
)

# ‡∏™‡πà‡∏ß‡∏ô‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•
output_area = widgets.Output()

# --- 3. ‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì ---
def on_click_calculate(b):
    with output_area:
        clear_output()
        if speed_v.value <= 0:
            print("‚ö†Ô∏è ‡∏≠‡πä‡∏∞! ‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß‡∏ï‡πâ‡∏≠‡∏á‡∏°‡∏≤‡∏Å‡∏Å‡∏ß‡πà‡∏≤ 0 ‡∏ô‡∏∞‡∏Ñ‡∏∞")
            return
        
        # ‡∏Ñ‡∏≥‡∏ô‡∏ß‡∏ì t = s / v
        time_hours = dist_s.value / speed_v.value
        total_minutes = time_hours * 60
        
        # ‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏•‡∏•‡∏±‡∏û‡∏ò‡πå‡πÅ‡∏ö‡∏ö‡∏ï‡∏Å‡πÅ‡∏ï‡πà‡∏á
        display(HTML(f"""
            <div style="border: 2px solid #FFB6C1; padding: 15px; border-radius: 15px; background-color: #FFF0F5;">
                <p style="font-size: 16px; color: #D81B60;">
                    <b>‡∏™‡∏ß‡∏±‡∏™‡∏î‡∏µ‡∏Ñ‡πà‡∏∞‡∏Ñ‡∏∏‡∏ì {name.value}! ‚ú®</b><br>
                    ‡πÄ‡∏î‡∏¥‡∏ô‡∏ó‡∏≤‡∏á‡∏à‡∏≤‡∏Å‡πÄ‡∏ß‡∏•‡∏≤‡∏ó‡∏µ‡πà‡∏ï‡∏±‡πâ‡∏á‡πÑ‡∏ß‡πâ: <b>{start_time.value} ‡∏ô.</b><br>
                    ‡∏£‡∏∞‡∏¢‡∏∞‡∏ó‡∏≤‡∏á {dist_s.value} ‡∏Å‡∏°. ‡∏î‡πâ‡∏ß‡∏¢‡∏Ñ‡∏ß‡∏≤‡∏°‡πÄ‡∏£‡πá‡∏ß {speed_v.value} ‡∏Å‡∏°./‡∏ä‡∏°.<br>
                    <hr>
                    ‚è±Ô∏è ‡∏ï‡πâ‡∏≠‡∏á‡πÉ‡∏ä‡πâ‡πÄ‡∏ß‡∏•‡∏≤‡πÄ‡∏î‡∏¥‡∏ô‡∏ó‡∏≤‡∏á: <span style="font-size: 20px; color: #FF1493;"><b>{total_minutes:.2f} ‡∏ô‡∏≤‡∏ó‡∏µ</b></span><br>
                    ‡∏Ç‡∏≠‡πÉ‡∏´‡πâ‡πÄ‡∏î‡∏¥‡∏ô‡∏ó‡∏≤‡∏á‡∏õ‡∏•‡∏≠‡∏î‡∏†‡∏±‡∏¢‡∏ô‡∏∞‡∏Ñ‡∏∞! üíñ
                </p>
            </div>
        """))

# ‡πÄ‡∏ä‡∏∑‡πà‡∏≠‡∏°‡∏ï‡πà‡∏≠‡∏õ‡∏∏‡πà‡∏°‡∏Å‡∏±‡∏ö‡∏ü‡∏±‡∏á‡∏Å‡πå‡∏ä‡∏±‡∏ô
calc_button.on_click(on_click_calculate)

# --- 4. ‡∏à‡∏±‡∏î‡∏ß‡∏≤‡∏á Layout ‡πÅ‡∏•‡∏∞‡πÅ‡∏™‡∏î‡∏á‡∏ú‡∏• ---
ui = widgets.VBox([
    header, 
    name, start_time, dist_s, speed_v, 
    widgets.Label(value=" "), # ‡πÄ‡∏ß‡πâ‡∏ô‡∏ß‡∏£‡∏£‡∏Ñ
    calc_button, 
    output_area
])

display(ui)
